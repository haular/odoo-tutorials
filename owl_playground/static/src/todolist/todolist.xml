<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
   <t t-name="owl_playground.todolist" owl="1">
      <input t-ref="input" type="text" placeholder="Enter a new task" t-on-keyup="addTodo"/>
       <t t-foreach="todolist" t-as="todo" t-key="todo.id">
            <Todo id="todo.id"
                  description="todo.description"
                  done="todo.done"
                  toggleState.bind="toggleState"
                  removeTodo.bind="removeTodo"/>
       </t>
   </t>
</templates>